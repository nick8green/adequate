{
  "name": "adequate",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "check": "prettier --check . && yarn lint && yarn typecheck && yarn test:ci",
    "checks": "yarn format && yarn lint:fix; yarn test --passWithNoTests",
    "coverage": "open coverage/lcov-report/index.html",
    "format": "prettier --write .",
    "generate:test-matrix": "node scripts/get-jest-projects.cjs",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --no-cache",
    "lint:check": "yarn lint --max-warnings 0",
    "lint:fix": "yarn lint --fix",
    "release": "lerna publish",
    "test": "jest --coverage --silent",
    "test:watch": "jest --watch",
    "test:app": "yarn test --selectProjects=adequate-app",
    "test:admin": "yarn test --selectProjects=adequate-admin",
    "test:shared": "yarn test --selectProjects=adequate-shared",
    "test:ci": "yarn test --passWithNoTests --runInBand",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/compat": "1.3.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.29.0",
    "@next/eslint-plugin-next": "15.3.4",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@types/jest": "30.0.0",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "8.34.1",
    "@typescript-eslint/parser": "8.34.1",
    "eslint": "9.29.0",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-playwright": "2.2.0",
    "eslint-plugin-prettier": "5.5.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.2.0",
    "istanbul-reports": "3.1.7",
    "jest": "30.0.2",
    "jest-environment-jsdom": "30.0.2",
    "jest-junit": "16.0.0",
    "lcov-parse": "^1.0.0",
    "lerna": "8.2.2",
    "prettier": "3.6.0",
    "ts-jest": "29.4.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.34.1"
  },
  "dependencies": {
    "@nick8green/components": "1.0.0",
    "@opentelemetry/api-logs": "0.203.0",
    "@opentelemetry/instrumentation": "0.203.0",
    "@opentelemetry/sdk-logs": "0.203.0",
    "@testing-library/react": "16.3.0",
    "@vercel/otel": "1.13.0",
    "next": "15.3.5",
    "prom-client": "15.1.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "type": "module",
  "resolutions": {
    "brace-expansion": "^1.1.12",
    "webpack-dev-server": "^5.2.1"
  },
  "packageManager": "yarn@1.22.22"
}
