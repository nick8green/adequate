{
  "name": "adequate",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "check": "prettier --check .",
    "checks": "yarn format && yarn lint:fix; yarn test --passWithNoTests",
    "format": "prettier --write .",
    "lint": "eslint . --cache --cache-location .eslintcache --ext .ts,.tsx,.js,.jsx apps packages",
    "lint:check": "yarn lint --max-warnings 0",
    "lint:fix": "yarn lint --fix",
    "release": "lerna publish",
    "test": "jest --coverage --coverageReporters=text --coverageReporters=html --passWithNoTests",
    "test:ci": "yarn test --ci",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.6.3",
    "@types/jest": "29.5.14",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "8.32.0",
    "@typescript-eslint/parser": "8.32.0",
    "eslint": "8.57.1",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.12.0",
    "eslint-plugin-playwright": "2.2.0",
    "eslint-plugin-prettier": "5.4.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "30.0.0-beta.3",
    "lerna": "7.4.2",
    "prettier": "3.5.3",
    "ts-jest": "29.3.4",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@nick8green/components": "1.0.0",
    "@opentelemetry/api-logs": "0.200.0",
    "@opentelemetry/instrumentation": "0.200.0",
    "@opentelemetry/sdk-logs": "0.200.0",
    "@vercel/otel": "1.12.0",
    "next": "15.3.2",
    "prom-client": "15.1.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "type": "module"
}
