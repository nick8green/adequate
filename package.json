{
  "name": "adequate",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "check": "prettier --check . && yarn lint && yarn typecheck && yarn test:ci",
    "checks": "yarn format && yarn lint:fix; yarn test --passWithNoTests",
    "coverage": "open coverage/lcov-report/index.html",
    "format": "prettier --write .",
    "generate:test-matrix": "node scripts/get-jest-projects.cjs",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --no-cache",
    "lint:check": "yarn lint --max-warnings 0",
    "lint:fix": "yarn lint --fix",
    "release": "lerna publish",
    "test": "jest --coverage --silent",
    "test:debug": "jest --coverage --silent=false",
    "test:watch": "jest --watch",
    "test:app": "yarn test --selectProjects=adequate-app",
    "test:admin": "yarn test --selectProjects=adequate-admin",
    "test:shared": "yarn test --selectProjects=adequate-shared",
    "test:ci": "yarn test --passWithNoTests --runInBand",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/compat": "1.3.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.32.0",
    "@next/eslint-plugin-next": "15.4.5",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.6.4",
    "@types/jest": "30.0.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "eslint": "9.32.0",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-playwright": "2.2.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.3.0",
    "identity-obj-proxy": "3.0.0",
    "istanbul-reports": "3.1.7",
    "jest": "30.0.5",
    "jest-environment-jsdom": "30.0.5",
    "jest-junit": "16.0.0",
    "lcov-parse": "1.0.0",
    "lerna": "8.2.3",
    "prettier": "3.6.2",
    "ts-jest": "29.4.1",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.0"
  },
  "dependencies": {
    "@nick8green/components": "1.0.0",
    "@opentelemetry/api-logs": "0.203.0",
    "@opentelemetry/instrumentation": "0.203.0",
    "@opentelemetry/sdk-logs": "0.203.0",
    "@testing-library/react": "16.3.0",
    "@vercel/otel": "1.13.0",
    "next": "15.4.6",
    "prom-client": "15.1.3",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "type": "module",
  "resolutions": {
    "form-data": "4.0.4",
    "webpack-dev-server": "5.2.1"
  },
  "packageManager": "yarn@1.22.22"
}
